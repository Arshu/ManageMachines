{
  "name": "{{$MachineName}}",
  "region": "{{$Region}}",
  "config": {
    "image": "{{$AppImage}}",
    "env": {
    },
    "restart": {
      "policy": "no",
      "max_retries": 0
    },
    "guest": {
      "cpu_kind": "shared",
      "cpus": 1,
      "memory_mb": 256
    },
    "services": [
      {        
        "ports": [
          {
            "port": 443,
            "handlers": [
              "tls",
              "http"
            ]
          },
          {
            "force_https": true,
            "port": 80,
            "handlers": [
              "http"
            ]
          }
        ],
        "protocol": "tcp",
        "internal_port": 8080
      }
    ],
    "metrics": {
      "port": 9091,
      "path": "/metrics"
    }
  }
}